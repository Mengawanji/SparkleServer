datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}


enum CleaningType {
  REGULAR
  DEEP
  MOVE_OUT_MOVE_IN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

model Booking {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Customer Information
  fullName     String
  email        String
  phone        String?  
  address      String

  // Service Details
  cleaningType      CleaningType
  numberOfBedrooms  Int
  numberOfBathrooms Int
  
  // Scheduling
  preferredDate DateTime @db.Date
  preferredTime String   // Stored as "HH:MM" format
  additionalNotes String? 

  // Pricing
  bedroomPrice   Decimal @db.Decimal(10, 2)
  bathroomPrice  Decimal @db.Decimal(10, 2)
  totalPrice     Decimal @db.Decimal(10, 2)

  // Status
  status BookingStatus @default(PENDING)

  // Email tracking
  invoiceSent Boolean @default(false)
  invoiceSentAt DateTime?

  @@index([email])
  @@index([preferredDate])
  @@index([status])
  @@index([createdAt])
}